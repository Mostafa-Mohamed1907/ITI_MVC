@model Department

<form method="get" action="/Department/SaveDepartment">
    <div class="form-group row">
        <label for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Name"  id="Name" value="@Model?.Name" placeholder="Name">
        </div>
    </div>
    <div class="form-group row">
        <label for="ManagerName" class="col-sm-2 col-form-label">ManagerName</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="ManagerName" id="ManagerName" value="@Model?.ManagerName" placeholder="ManagerName">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <br />
            <button type="submit" class="btn btn-primary">Add New Department</button> 
        </div>
    </div>
</form>

<br />
<a class="btn btn-primary" href="/Department/Index" role="button">Return For All Dept</a>
